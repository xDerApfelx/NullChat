{
    "name": "nullchat",
    "version": "2.0.0",
    "description": "Minimalistic P2P Chat & Voice App using Electron and PeerJS",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "debug1": "electron . --debug-instance=1",
        "debug2": "electron . --debug-instance=2",
        "debug3": "electron . --debug-instance=3",
        "make": "electron-builder --win --x64"
    },
    "dependencies": {
        "peerjs": "^1.5.5",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "electron": "^34.0.0",
        "electron-builder": "^25.1.8"
    },
    "build": {
        "appId": "com.nullchat.app",
        "productName": "NullChat",
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "allowElevation": true,
            "runAfterFinish": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "uninstallDisplayName": "NullChat Messenger",
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "files": [
            "main.js",
            "preload.js",
            "index.html",
            "renderer.js",
            "styles.css",
            "logger.js",
            "package.json",
            "assets"
        ]
    }
}