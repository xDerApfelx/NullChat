{
    "name": "nullchat",
    "version": "1.3.6",
    "description": "Minimalistic P2P Chat & Voice App using Electron and PeerJS",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "debug1": "electron . --debug-instance=1",
        "debug2": "electron . --debug-instance=2",
        "debug3": "electron . --debug-instance=3",
        "make": "electron-builder --win --x64"
    },
    "dependencies": {
        "peerjs": "^1.5.4",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "electron": "^28.1.0",
        "electron-builder": "^24.9.1"
    },
    "build": {
        "appId": "com.nullchat.app",
        "productName": "NullChat",
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "perMachine": false
        },
        "files": [
            "main.js",
            "preload.js",
            "index.html",
            "renderer.js",
            "styles.css",
            "logger.js",
            "package.json",
            "assets"
        ]
    }
}